<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/you_lose_background"
    android:gravity="center_horizontal"
    tools:context=".YouLose">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center"
        android:text="HAHA.."
        android:textColor="#267E0A"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/joker1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center"
        android:text="YOU LOSE !"
        android:textColor="#267E0A"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFate"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_fate_background"
        android:fontFamily="@font/aclonica"
        android:text="Change your fate"
        android:textColor="#5A1E1E"
        android:textSize="22sp" />
</LinearLayout>